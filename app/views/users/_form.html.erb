
<div class="col-sm-6">
      <div class="box-content">
            <div class="row">
              <div class="form-group">
                <div class="col-md-12">
                    <div class="text-field">
                        <%= form.label :email %>
                        <%= form.text_field :email, type: 'email', class: 'form-control input-lg' %>
                    </div>
                </div>
                 
              </div>
            </div>
          
            <div class="row">
                <div class="form-group">
                  <div class="col-md-12">
                      <div class="password-field">
                          <%= form.label :password %>
                          <%= form.password_field :password , class: 'form-control input-lg' %>
                      </div>
                  </div>
                   
                </div>
              </div>
              
              <div class="form-group">
                  <div class="col-md-12">
                    <input type="submit" value="Login" class="btn btn-primary pull-right mb-xl" data-loading-text="Loading...">
                  </div>
                   
                </div>
              </div>

              <div class="form-group">
                  <div class="col-md-12">
                      <div class="other-links">
                        <%= link_to t(".sign_in"), sign_in_path %>
                      </div>
                  </div>
                   
                </div>
              </div>
      </div>
    
  </div>