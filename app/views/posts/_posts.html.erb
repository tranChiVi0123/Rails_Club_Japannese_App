<div class="row">
    <div class="col-md-12">
        <h4 class="mb-none">Posts</h4>
            <hr class="solid mt-md">
    </div>
</div>
<% @posts.each do |post| %>
<div class="col-md-4">
    <div class="recent-posts">
        <article class="post">
            <div class="date">
                <span class="day"><%= post.created_at.strftime("%d") %></span>
                <span class="month"><%= post.created_at.strftime("%b") %></span>
            </div>
            <h4><a href="/posts/<%= post.id %>"><%= post.title[0..20]+"..."%></a></h4>
            <p><%= post.content[0..100] +" ..." %></p>
            <div class="post-meta">
                <span><i class="fa fa-calendar"></i><%= post.created_at.strftime("%b %d, %Y") %></span>
                <span><i class="fa fa-user"></i> By 
                    <a href="/users/<%= post.user.id %>">                 
                    <% if post.user.name.blank? %>                 
                    <%= post.user.email %>
                    <% else %>
                    <%= post.user.name %>
                    <% end %>
                    </a> 
                </span>
                <span><i class="fa fa-tag"></i>
                <% post.tags.split(",").each do |tag|%>
                    <a href="/posts/search/?t=<%= tag %>"><%= tag %></a>,
                <% end %>
                </span>
                <span><i class="fa fa-comments"></i> <a href="#"><%= post.comments.count %> Comments</a></span>
                <hr class="solid">
                <a href="/posts/<%= post.id %>" class="btn btn-xs btn-primary pull-right mb-lg">Read more...</a>
            </div>
        </article>
    </div>
</div>
<% end %>