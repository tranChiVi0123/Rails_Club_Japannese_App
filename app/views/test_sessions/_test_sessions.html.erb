<ul class="nav nav-pills sort-source" data-sort-id="portfolio" data-option-key="filter"
    data-plugin-options="{'layoutMode': 'fitRows', 'filter': '*'}">
    <li data-option-value="*" class="active"><a href="#">Show All</a></li>
    <li data-option-value=".kanji"><a href="#">Kanji</a></li>
    <li data-option-value=".grammar"><a href="#">Grammar</a></li>
    <li data-option-value=".vocabulary"><a href="#">Vocabulary</a></li>
    <li data-option-value=".listening"><a href="#">Listening</a></li>
    <li data-option-value=".jlpt"><a href="#">JLPT</a></li>
    <li data-option-value=".homework"><a href="#">Homework</a></li>
</ul>

<hr>

<div class="row">

    <div class="sort-destination-loader sort-destination-loader-showing">
        <ul class="portfolio-list sort-destination" data-sort-id="portfolio">

            <% @test_sessions.each do |test_session| %>
            <li class="col-md-2 col-sm-6 col-xs-12 isotope-item <%= test_session.category.title.downcase %>">
                <div class="portfolio-item">
                    <a href="/test_sessions/<%= test_session.id %>">
                        <span class="thumb-info thumb-info-centered-info">
                            <span class="thumb-info-wrapper">
                                <img src="/img/<%= test_session.img %>" class="img-responsive" alt="">
                                <span class="thumb-info-title">
                                    <span class="thumb-info-inner font-size-xs"><%= test_session.category.content %></span>
                                </span>
                            </span>
                        </span>
                    </a>
                </div>
            </li>
            <% end %>
        </ul>
    </div>
</div>