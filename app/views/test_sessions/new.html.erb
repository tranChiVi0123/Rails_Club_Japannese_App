<div class="row">
    <div class="col-lg-12">
        <section class="panel panel-admin">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
                </div>

                <h2 class="panel-title">New Test-Session</h2>
            </header>
            <div class="panel-body">
                <form id="createTestSessionForm" class="form-horizontal form-bordered" accept-charset="UTF-8" method="post" action="/test_sessions/create">
                    <%= csrf %>
                    <%= optionsForm("session", "create")%>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputDefault">Phiên</label>
                        <div class="col-md-6">
                            <input type="text" name="session[content]" class="form-control" id="inputDefault">
                        </div>
                    </div>
                    <div class="form-group">
                            <label class="col-md-3 control-label" for="inputDefault">Category ID</label>
                            <div class="col-md-6">
                                <input type="text" name="session[category_id]" class="form-control" id="inputDefault">
                            </div>
                        </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputHelpText">Thời gian phát đề</label>
                        <div class="col-sm-6">
                            <input name="session[time_public]" type="text" class="form-control" id="datetimepicker4">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputDefault">Thời gian thi</label>
                        <div class="col-md-6">
                            <input type="text" name="session[time_remaining]" class="form-control" id="inputDefault">
                            <span class="help-block">Đơn vị: phút</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label" for="inputHelpText">List Exam Ids</div>
                        <div class="col-md-6">
                            <textarea class="form-control" name="session[list_exams]" form="createTestSessionForm" cols="50"
                                rows="6" value=""></textarea>
                            <span class="help-block"><i class="icon-notebook icons"></i> Xóa hoặc thêm dòng để chỉnh sửa
                                đề
                                thi</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label" for="inputHelpText">Danh sách thí sinh</div>
                        <div class="col-md-6">
                            <textarea class="form-control" name="session[list_members]" form="createTestSessionForm" cols="50"
                                rows="6" value=""></textarea>
                            <span class="help-block"><i class="icon-notebook icons"></i> Xóa hoặc thêm dòng để chỉnh sửa
                                thí sinh</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <p>
                            <button class="btn btn-3d btn-secondary mr-xs mb-sm" name="session[submit]" type="submit"
                                value="save">Save</button>
                        </p>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>